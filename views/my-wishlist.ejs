                                    <ul class="flex gap-3 mt-1">
                                      <% (sizesMap[item.product_id] || []).forEach(size=> { %>
                                        <li class="relative">
                                          <!-- <button
                                            class="item-size-button text-[14px] font-[600] w-[35px] h-[35px] border-[1px] rounded-full 
