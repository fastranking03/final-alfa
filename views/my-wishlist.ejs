</div>
<%- include('includes/foot') %>
  <script src="assets/js/whislist.js"></script>
  <script>
    // Handle size selection
    const sizeButtons = document.querySelectorAll('.item-size-button');
    sizeButtons.forEach(button => {
      button.addEventListener('click', function () {
        console.log(button)
        if (button.getAttribute('data-selected') === 'true') {
          return;
        }
        sizeButtons.forEach(btn => {
          btn.setAttribute('data-selected', 'false');
          btn.classList.remove('border-red-600', 'bg-red-100');
        });
        button.setAttribute('data-selected', 'true');
        button.classList.add('border-red-600', 'bg-red-100');
        document.getElementById('selected-sizes').value = button.getAttribute('data-size');
      });
    });
    document.querySelectorAll('.add-to-cart').forEach(button => {
      button.addEventListener('click', function (e) {
        e.preventDefault();

        const selectedSize = document.getElementById('selected-sizes').value;
        var message = document.getElementById("productAddedInCart");
        if (!selectedSize) {
          message.textContent = "Select product size.";
          message.style.display = "block";
          setTimeout(() => {
            message.style.display = "none";
          }, 4000);
          return;
        }

        // Get product-specific data from the button's dataset
        const productData = {
          product_id: button.getAttribute('data-product-id'),
          product_name: button.getAttribute('data-product-name'),
          product_price: button.getAttribute('data-product-price'),
          product_image: button.getAttribute('data-product-image'),
          quantity: 1, // Default quantity is 1
          product_size: selectedSize
        };

        fetch('/add-to-cart', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(productData)
        })
          .then(response => response.json())
          .then(data => {
            if (data.success) {
              window.location.href = '/my-cart';
            } else {
              alert('Failed to add product to cart.');
            }
          })
          .catch(error => {
            console.error('Error:', error);
          });
      });
    });

    $(document).on("click", ".delete-product", function (e) {
        e.preventDefault();
        var cart_id = $(this).attr("id");
        console.log(cart_id)
         alertify.confirm("Are You Sure Want to Delete this Item?")
          .set("onok", function (closeEvent) {
            // Make the AJAX call
            $.ajax({
              type: "POST",
              url: "/api/delete-wishlist",
              contentType: "application/json",
              data: JSON.stringify({ cart_id: cart_id }),
              success: function (response) {
                alertify.set("notifier", "position", "top-center");
                alertify.success(response.message);
                setTimeout(function () {
                  window.location.reload();
                }, 1000);
              },
              error: function (xhr) {
                alertify.error("An error occurred while deleting the item.");
                console.error(xhr.responseText);
              }
            });
          })
          .set({
            title: "Delete Wishlist Item"
          });
      });
  </script>

  </body>

</html>