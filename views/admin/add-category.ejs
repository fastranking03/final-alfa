<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alfa Menswear | Add Category</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <%- include('includes/head') %>
</head>
 
<body>
    <div>
        <div class="flex">
            <%- include('includes/side-bar') %>

            <div class="pages">
                <div>
                    <%- include('includes/header') %>
                </div>
                <!-- Page Content -->
                 <div class="p-5">
                     <div>
                         <div class="">
                            <h3 class="text-2xl font-bold">Add Category</h3>
                         </div>
                         <div class="mt-4">
                              <form method="post" action="/admin/add-category">
                                <div class="flex gap-5">
                                    <div class="sm:w-[50%]">
                                        <div>
                                            <label class="font-[600]">Wear Type</label>
                                            <select name="wear_type_id" class="p-2 border-[1px] rounded-[10px] w-[100%] mt-2 outline-none">
                                                <option value="active">Select</option>
                                             <% typeData.forEach(data =>{ %> 
                                                   <option value="<%= data.id %>"><%= data.i_type %></option>
                                                <%})%>   
                                             </select>
                                            
                                        </div>
                                    </div>
                                    <div class="sm:w-[50%]">
                                        <div>
                                            <label class="font[600]">Category Name</label>
                                            <input type="text" name="cat_name" id="cat-name" class="p-2 border-[1px] rounded-[10px] w-[100%] mt-2 outline-none" required>
                                        </div>
                                    </div>
                                    <div class="sm:w-[50%]">
                                        <div>
                                            <label class="font[600]">Category Slug</label>
                                            <input type="text" name="cat_slug" id="cat-url" class="p-2 border-[1px] rounded-[10px] w-[100%] mt-2 outline-none" required>
                                        </div>
                                    </div>
                                 </div>
                                 <div class="mt-4 flex gap-5">
                                    <div class="sm:w-[50%]">
                                        <div>
                                            <label class="font-[600]">Status</label>
                                            <select name="status" class="p-2 border-[1px] rounded-[10px] w-[100%] mt-2 outline-none">
                                                <option value="active">Active</option>
                                                <option value="inactive">inactive</option>
                                            </select>
                                            
                                        </div>
                                    </div>
                                    <div class="sm:w-[50%]">
                                        <div>
                                            <label class="font-[600]">Is Accessories</label>
                                            <select name="is_accessories" class="p-2 border-[1px] rounded-[10px] w-[100%] mt-2 outline-none" required>
                                                <option value="">Select</option>
                                                <option value="1">No</option>
                                                <option value="0">Yes</option>
                                             </select>
                                            
                                        </div>
                                    </div>
                                 </div>
                                 <div class="mt-5">
                                    <button type="submit" class="p-2 bg-sky-400 text-white px-10 rounded-[10px]">Submit</button>
                                </div>
                              </form>
                         </div>
                     </div>
                 </div>
            </div>
        </div>
    </div>
    <script>
        document.getElementById('cat-name').addEventListener('input', function() {
            const productName = this.value;
            const seoUrl = productName
                .toLowerCase()
                .replace(/[^a-z0-9\s]/g, '')
                .trim()
                .replace(/\s+/g, '-');
            document.getElementById('cat-url').value = seoUrl;
        });

    </script>
</body>

</html>